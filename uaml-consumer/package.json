{
  "name": "uaml-consumer",
  "displayName": "Uaml consumer",
  "description": "Получение кликабельных pdf файлов из uaml файлов ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:uaml-consumer.getDataFromOne",
    "onCommand:uaml-consumer.getDataFromProject",
    "onCustomEditor:uaml-consumer.svg"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
			{
				"viewType": "uaml-consumer.svg",
				"displayName": "Pdf Viewer",
				"selector": [
					{
						"filenamePattern": "*.svg"
					}
				]
		  }
    ],
    "commands": [
      {
        "command": "uaml-consumer.getDataFromOne",
        "title": "Get Uaml doc",
        "category": "uamlConsumer"
      },
      {
        "command": "uaml-consumer.getDataFromProject",
        "title": "Get Uaml project docs",
        "category": "uamlConsumer"
      }
    ],
    "configuration": [
      {
        "title": "Uaml-consumer",
        "properties": {
          "uamlConsumer.server.uri": {
            "description": "Базовый URI uaml-сервера",
            "type": "string",
            "default": ""
          },
          "uamlConsumer.server.optional.headers": {
            "description": "Дополнительные заголовки, используемые плагином при запросах на сервер",
            "type": "object",
            "default": {}
          },
          "uamlConsumer.login": {
            "description": "Логин для доступа к сервису",
            "type": "string",
            "default": "none"
          },
          "uamlConsumer.password": {
            "description": "Пароль для доступа к сервису",
            "type": "string",
            "default": "none"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "node-fetch": "^3.2.10"
  }
}
